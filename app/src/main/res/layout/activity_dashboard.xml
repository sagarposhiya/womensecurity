<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.womensecurity.Dashboard"
    tools:ignore="HardcodedText">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/home"/>
        <TextView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="109dp"
            android:layout_marginHorizontal="25dp"
            android:text="Home"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="109dp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="50dp"
                    android:onClick="onSecurityCall"
                    android:src="@drawable/scall"
                    android:layout_marginLeft="50dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="Security Call"
                    android:textSize="20dp"
                    android:textColor="@color/darkTextColor"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="-151dp"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="210dp"
            android:layout_marginLeft="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:src="@drawable/ecall"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="Emergency Call"
                    android:textSize="20dp"
                    android:textColor="@color/darkTextColor"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/message"
                    android:layout_marginLeft="50dp" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="Send Message"
                    android:textSize="20dp"
                    android:textColor="@color/darkTextColor"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="-151dp"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="210dp"
            android:layout_marginLeft="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/siren"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:src="@drawable/siren"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="Siren Play"
                    android:textSize="20dp"
                    android:textColor="@color/darkTextColor"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/loctaion" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="My Location"
                    android:textColor="@color/darkTextColor"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="-151dp"
            android:layout_marginStart="210dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:src="@drawable/video"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="Tack Video"
                    android:textSize="20dp"
                    android:textColor="@color/darkTextColor"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <!--this the navigation view which draws
            and shows the navigation drawer-->
    <!--include the menu created in the menu folder-->

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>